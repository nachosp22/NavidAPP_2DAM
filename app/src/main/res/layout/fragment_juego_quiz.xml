<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA">

    <TextView
        android:id="@+id/tvTituloQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZ FINAL"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#006064"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPuntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos: 0"
        android:textSize="18sp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/tvTituloQuiz"
        app:layout_constraintBottom_toBottomOf="@id/tvTituloQuiz"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="#FFFFFF"
        android:padding="24dp"
        android:elevation="4dp"
        android:text="Cargando pregunta..."
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTituloQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutRespuestas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvPregunta">

        <Button
            android:id="@+id/btnOp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opción 1"
            android:backgroundTint="#0097A7"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnOp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opción 2"
            android:backgroundTint="#0097A7"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnOp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opción 3"
            android:backgroundTint="#0097A7"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelFinal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9000000"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        android:elevation="10dp">

        <TextView
            android:id="@+id/tvMensajeFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡FELICIDADES!"
            android:textColor="#FFD700"
            android:textSize="34sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvSubtituloFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has salvado la Navidad"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TERMINAR AVENTURA"
            android:backgroundTint="#D32F2F"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>