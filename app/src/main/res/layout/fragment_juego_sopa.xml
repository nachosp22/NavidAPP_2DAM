<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"> <TextView
    android:id="@+id/txt_counter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Palabras encontradas: 0/4"
    android:textColor="#1B5E20"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_marginTop="32dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_urgency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¡Rápido! Busca las palabras que se nos muere Misco"
        android:textAlignment="center"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/game_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/txt_urgency"
        app:layout_constraintBottom_toTopOf="@id/btn_next_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_next_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡MISCO SALVADO! >>"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>